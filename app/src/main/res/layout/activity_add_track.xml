<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/activity_add_track_ImageEditTxt3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:ems="10"
            android:hint="Image"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_add_track_LyricEditTxt" />


        <Spinner
            app:layout_constraintEnd_toEndOf="@+id/activity_add_track_LyricEditTxt"
            app:layout_constraintStart_toStartOf="@+id/activity_add_track_LyricEditTxt"
            app:layout_constraintTop_toBottomOf="@+id/activity_add_track_NameEditTxt"
            android:id="@+id/activity_add_track_GenreSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
          />

        <TextView
            android:id="@+id/txtAdminAdd3"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:text="CREATE NEW TRACK"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/activity_add_track_NameEditTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtAdminAdd3" />


        <EditText
            android:id="@+id/activity_add_track_LyricEditTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:ems="10"
            android:hint="Lyric"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_add_track_AlbumSpinner" />

        <EditText
            android:id="@+id/activity_add_track_ImageEditTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:ems="10"
            android:hint="Image"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_add_track_LyricEditTxt" />

        <EditText
            android:id="@+id/activity_add_track_SourceEditTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:ems="10"
            android:hint="Source"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_add_track_ImageEditTxt3" />

        <EditText
            android:id="@+id/activity_add_track_ReleaseDateEditTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="Release date"
            android:inputType="none"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="@+id/activity_add_track_SourceEditTxt"
            app:layout_constraintStart_toStartOf="@+id/activity_add_track_SourceEditTxt"
            app:layout_constraintTop_toBottomOf="@+id/activity_add_track_SourceEditTxt" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/activity_add_track_AddBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:background="@color/teal_200"
            android:text="Save"
            android:textColor="#5E35B1"
            android:textSize="18dp"
            app:layout_constraintEnd_toStartOf="@id/activity_add_track_CancelBtn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_add_track_PickReleaseDateBtn" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/activity_add_track_CancelBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="24dp"

            android:background="@color/gray"
            android:text="Cancel"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/activity_add_track_AddBtn"
            app:layout_constraintTop_toBottomOf="@+id/activity_add_track_PickReleaseDateBtn" />

        <Button
            android:id="@+id/activity_add_track_PickReleaseDateBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:onClick="showDatePickerDialog"
            android:text="Pick Release Date"
            app:layout_constraintEnd_toEndOf="@+id/activity_add_track_ReleaseDateEditTxt"
            app:layout_constraintStart_toStartOf="@+id/activity_add_track_ReleaseDateEditTxt"
            app:layout_constraintTop_toBottomOf="@+id/activity_add_track_ReleaseDateEditTxt" />

        <Spinner
            android:id="@+id/activity_add_track_ArtistSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="@+id/activity_add_track_LyricEditTxt"
            app:layout_constraintStart_toStartOf="@+id/activity_add_track_LyricEditTxt"
            app:layout_constraintTop_toBottomOf="@+id/activity_add_track_GenreSpinner" />

        <Spinner
            android:id="@+id/activity_add_track_AlbumSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="@+id/activity_add_track_LyricEditTxt"
            app:layout_constraintStart_toStartOf="@+id/activity_add_track_LyricEditTxt"
            app:layout_constraintTop_toBottomOf="@+id/activity_add_track_ArtistSpinner" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>