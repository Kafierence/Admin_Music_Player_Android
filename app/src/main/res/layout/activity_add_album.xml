<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/activity_add_AlbumImageEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:hint="Image url"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_add_album_ArtistSpinner" />

        <TextView
            android:id="@+id/txtAdminAdd2"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:text="CREATE NEW ALBUM"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/activity_add_album_nameEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="32dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtAdminAdd2" />

        <EditText
            android:id="@+id/activity_add_album_descriptionEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="32dp"
            android:ems="10"
            android:hint="Description"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_add_AlbumImageEdit" />

        <Spinner
            android:id="@+id/activity_add_album_ArtistSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="Artist"
            app:layout_constraintEnd_toEndOf="@+id/activity_add_album_nameEdit"
            app:layout_constraintStart_toStartOf="@+id/activity_add_album_nameEdit"
            app:layout_constraintTop_toBottomOf="@+id/activity_add_album_nameEdit" />

        <EditText
            android:id="@+id/activity_add_album_ReleaseDateEditTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:ems="10"
            android:hint="Release Date"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_add_album_descriptionEdit" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSaveAdminAdd2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="24dp"
            android:background="@color/teal_200"
            android:text="Save"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            app:layout_constraintEnd_toStartOf="@id/btnCancelAdminAdd2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_add_album_ReleaseDateEditTxt" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancelAdminAdd2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@color/gray"
            android:text="Cancel"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btnSaveAdminAdd2"
            app:layout_constraintTop_toTopOf="@+id/btnSaveAdminAdd2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>